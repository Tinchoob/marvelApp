<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFE2E3"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:padding="20dp"
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/baseRecycler"
        android:weightSum="30">

        <EditText
            android:id="@+id/character_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/textinputborder"
            android:layout_gravity="center"
            android:layout_weight="15"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/submit_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            app:layout_constraintLeft_toRightOf="@id/character_input" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/baseRecycler"
        android:layout_below="@id/search_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/search_container"/>

</RelativeLayout>